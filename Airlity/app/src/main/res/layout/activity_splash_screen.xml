<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/iv_logo_splash"
        android:layout_width="317dp"
        android:layout_height="197dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_lema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Conoce el aire que le rodea"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_nombre"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/iv_nombre"
        app:layout_constraintTop_toBottomOf="@+id/iv_nombre"
        app:layout_constraintVertical_bias="0.101" />

    <ImageView
        android:id="@+id/iv_nombre"
        android:layout_width="236dp"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_splash"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_splash"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_splash"
        app:srcCompat="@drawable/airlity_nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>